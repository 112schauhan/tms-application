# Environment Configuration
NODE_ENV=development
PORT=4000

# Database - Neon PostgreSQL
# Get your connection string from: https://console.neon.tech
# Format: postgresql://user:password@host:5432/dbname?sslmode=require
DATABASE_URL="postgresql://neondb_owner:your-password-here@ep-your-endpoint.us-east-1.neon.tech/tms_db?sslmode=require"

# JWT Authentication
# Generate secure random strings (minimum 32 characters each)
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production-min-32-chars"
REFRESH_TOKEN_SECRET="your-refresh-token-secret-change-this-in-production"

# Frontend URL
FRONTEND_URL="http://localhost:5173"

# Redis Cache (OPTIONAL - only if using Redis)
# REDIS_URL="redis://localhost:6379"
